% fzf

# interactively try out filter cmd
xclip -f | fzf --phony \
    --read0 \
    --print0 \
    --sync \
    --ansi \
    --preview 'xclip -o | <filter> '{q}' | <previewer>' \
    --preview-window 'up:99%'
    --bind 'enter:print-query'

$ filter: echo 'jq awk rg kak sed' | tr ' ' '\n' --- --map "sed 's/jq/jq --color-output/;s/kak/kak -f/'"
$ previewer: echo 'bat jless' | tr ' ' '\n' --- --map "sed 's/bat/bat --color=always/'"

